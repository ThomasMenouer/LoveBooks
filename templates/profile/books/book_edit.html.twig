{% extends 'base.html.twig' %}

{% block title %}Modifier un livre{% endblock %}

{% block body %}

<turbo-frame id="profile_content">

    <div class="col-3">

        <h1>Modifier un livre</h1>
        {{ form_start(form, { 'attr': { 'data-turbo-frame': 'profile_content' } }) }}
            {{ form_errors(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.authors) }}
            {{ form_row(form.status) }}
            {{ form_row(form.submit) }}

        {{ form_end(form) }}
    
    </div>
    
    <div class="d-flex justify-content-center">
        <a href="{{ path('profile_book_details', {'id': book.id}) }}" class="btn btn-outline-custom" data-turbo-frame="profile_content">Annuler</a>
    
    </div>


</turbo-frame>
{% endblock %}