{% extends 'base.html.twig' %}

{% block title %}Book Detail{% endblock %}

{% block body %}

<turbo-frame id="profile_content">

    <div class="row d-flex justify-content-center">
        <div class="col">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ book.thumbnail }}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ book.title }}</h5>
                            <p class="card-text">{{ book.description }}</p>
                            <p class="card-text"><small>{{ book.publishedDate | date('d/m/Y') }}</small></p>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="{{ path('profile_book_edit', {'id': book.id}) }}" class="btn btn-outline-custom-yellow" data-turbo="false">Modifier</a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</turbo-frame>
{% endblock %}