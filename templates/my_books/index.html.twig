{% extends 'base.html.twig' %}

{% block title %}MyBooks{% endblock %}

{% block body %}

<main>
    <section class="d-flex align-items-stretch">
    {% include "partials/navbar.html.twig" %}
        <div class="container">
            <div class="row text-center my-4">
                <h1>My books</h1>
            </div>
            <div class="row">
                <table class="table text-white">
                    <tbody>
                        {% for book in books %}
                            <tr>
                            
                                <td>
                                    <p>{{ book.title }}</p>
                                </td>
                                <td>
                                    <a href="{{ path("mybooks_book_details", { "id": book.id }) }}" class="btn btn-outline-primary">see book details</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    </table>
            </div>
        </div>
    </section>

</main>

{% endblock %}
