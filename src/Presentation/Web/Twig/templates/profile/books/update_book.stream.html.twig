{% if book.status == 'reading' %}
    <turbo-stream action="replace" target="book_{{ book.id }}">
        <template>
            {% include 'profile/books/_book_card.html.twig' with {
                book: book,
                form: form
            } %}
        </template>
    </turbo-stream>
{% else %}
    <turbo-stream action="remove" target="book_{{ book.id }}">
        <template></template>
    </turbo-stream>
{% endif %}