{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

<main>
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-12 col-md-6 mx-auto">
                <div class="card border-0 rounded-5" style="height: 150px;">  
                    <div class="row g-0 my-auto">
                        <div class="col-3 col-md-3 text-center my-auto">
                            {% if user.avatar %}
                                <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="Avatar" 
                                    class="img-fluid rounded-circle"
                                    style="height: 100px; width: 100px; object-fit: cover;" >
                            {% else %}
                                <p>Pas d’avatar.</p>
                            {% endif %}
                        </div>                        

                        <div class="col-9 col-md-9">
                            <div class="card-body">
                                <h5 class="card-title mb-3">{{ user.name }}</h5>

                                {% if app.user and app.user.id == user.id %}
                                    <div class="d-inline-flex gap-3 text-center">
                                        <a href="{{ path('profile_edit_avatar') }}" class="btn btn-outline-custom-yellow text-decoration-none">Modifier profil</a>
                                        <a href="{{ path('app_logout') }}" class="btn btn-outline-custom-red text-decoration-none">Déconnexion</a>
                                    </div>
                                    
                                {% endif %}
                                
                            </div>                        
                        </div>

                    
                    </div>
                </div>
            
            </div>

        </div>

        <div class="row mb-4">
            <h3 class="mb-4 text-center">Statistiques</h3>
            <div {{ react_component('Stats', { stats: stats }) }}></div>
        </div>

        <div class="row mb-2">
            <h3 class="mb-4 text-center">Mes livres préférés</h3>
            <div class="row row-cols-auto justify-content-center">

                {% if preferredBooks %}

                    {% for book in preferredBooks |slice(0,3) %}

                        <div class="col">
                            <a href="{{ path("book_index", { "id": book.book.id }) }}" class="text-decoration-none">
                                <img src="{{ book.book.thumbnail }}" 
                                    class="img-fluid rounded mb-2 img-mobile"
                                    style="height: 225px; object-fit: cover;"
                                    alt="{{ book.book.title }}">
                            </a>
                        </div>
                    
                    {% endfor %}
                {% if preferredBooks|length > 3 %}
                    <div class="col-12 my-2 text-center">
                        <a href="{{ path('book_preferred') }}" class="btn btn-outline-custom-blue">Voir plus</a>
                    </div>
                {% endif %}
                {% else %}
                     <p class="text-center">Aucun livre préféré.</p>
                {% endif %}
            </div>
        </div>

        <div class="row mb-4">
            <h3 class="mb-4 text-center">En cours de lecture</h3>

            <div class="align-items-center">

                <div {{ react_component('CurrentlyReading', { userId: user.id, isOwnProfile: app.user and app.user.id == user.id }) }}></div>
            </div>
        </div>
    </div>
</main>

{% endblock %}

